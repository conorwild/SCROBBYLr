{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": true
        },
        {
            "name": "R2 Web",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "rrecords.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=4999",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "R2 match all",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "rrecords.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "tasks",
                "match_all_releases",
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "R2 match one",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "rrecords.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "tasks",
                "match_release",
                "12"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "R2 sync collection",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "rrecords.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "tasks",
                "sync_collection",
                "1",
                "1"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
    ],
}